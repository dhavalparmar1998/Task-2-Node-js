<%- include("menu.ejs") %>

<div class="container">
    <h1>Add Users</h1>
    <form method="post" enctype="multipart/form-data" action="/file-upload-action">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" name="name" id="" placeholder="Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="dob">Date of Birth:</label>
            <input type="text" name="dob" id="" placeholder="Date of Birth" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="place">Place:</label>
            <input type="text" name="place" id="" placeholder="Place" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="about">About:</label>
            <input type="text" name="about" id="" placeholder="About" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="userfile">Upload File:</label>
            <input type="file" name="userfile" id="" class="form-control" required />
        </div>
        <!-- <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" placeholder="Recipient's Email" class="form-control" required />
        </div> -->
        <button type="submit" class="btn btn-primary">Upload File</button>
    </form>
</div>
